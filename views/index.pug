doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/style.css')
    script(src='/scripts/hideAddress.js' defer)
    title Oliebollenactie HarenSamen 16+
  body
    main
      h1 Oliebollenactie HarenSamen 16+
        h2 Prijs
        ul
          li Haafs oliebollen: €11 per zak van 5 naturel en 5 met krenten/rozijnen
          li Huisgebakken nieuwjaarsrolletjes: €5 per zak van 25 nieuwjaarsrolletjes
      .halved
        form(action='/orders' method='post' enctype='application/x-www-form-urlencoded')
          label
            h4 Naam
            input(type='text' name='name' required)
          label
            h4 Emailadres
            input(type='email' name='email' required)
          label
            h4 Aantal zakken oliebollen
            input.oliebollen(type='number' min='0' name='oliebollen' value="0" required)
          label
            h4 Aantal zakken nieuwjaarsrolletjes
            input.rolletjes(type='number' min='0' name='rolletjes' value="0" required)
          label
            h4.table
              input#isForDelivery(type='checkbox', name='isForDelivery')
              | Ik wil graag dat mijn bestelling bezorgd wordt
          label#address
            h4 Adres
            input.address(type='text' name='address')
          p Totaal: €#[span.total ...]
          button(type="submit") Bestelling Plaatsen

          script.
            const oliebollen = document.querySelector('.oliebollen');
            const rolletjes = document.querySelector('.rolletjes');
            const total = document.querySelector('.total');

            const handler = () => total.innerHTML = +oliebollen.value * 11 + +rolletjes.value * 5

            oliebollen.addEventListener('input', handler)
            rolletjes.addEventListener('input', handler)
      
        img(src='/assets/oliebollen.png')