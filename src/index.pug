doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='style.css')
    title Ontmoetings-Oliebollen
  body
    h1 Ontmoetings-Oliebollen
    .halved
      div
        h2 Prijs
        ul
          li 1 oliebol: â‚¬1
          li Elke 10de oliebol gratis!
          li Betalen kan contant, bij het afhalen van de oliebollen.
          li Geen oliebollen, maar wel doneren? Dat kan ook contant op de dag dat de oliebollen afgehaald kunnen worden.
        form(action='/submit' method='post' enctype='application/x-www-form-urlencoded')
          label
            h4 Naam
            input(type='text' name='name' required)
          label
            h4 Telefoonnummer
            input(type='tel' name='phone' required)
          label
            h4 Aantal gewone oliebollen
            input.count(type='number' min='0' name='count' value="0" required)
          label
            h4 Aantal oliebollen met krenten
            input.krenten(type='number' min='0' name='krenten' value="0" required)
          p Totaal: â‚¬#[span.price 0] 
          button(type="submit") Bestelling Plaatsen
          script.
            const plain = document.querySelector('.count');
            const krenten = document.querySelector('.krenten');
            const price = document.querySelector('.price');
            
            const listener = () => {
              const count = +plain.value + +krenten.value;
              price.innerText = count - Math.floor(count / 10);
            };

            plain.addEventListener('input', listener);
            krenten.addEventListener('input', listener);
      img(src='assets/oliebollen.png')
